<div class="upload-container">
    <h1>Upload Profile Picture</h1>
    
    <form id="profile-upload-form" enctype="multipart/form-data">
        <div class="preview-container">
            <img id="image-preview" src="{{#if user.profilePicture}}{{user.profilePicture}}{{else}}/public/images/default-profile.png{{/if}}" alt="Profile Picture Preview">
        </div>
        
        <div class="form-group">
            <label for="profileImage">Select Image:</label>
            <input type="file" id="profileImage" name="profileImage" accept="image/*" required>
            <p class="help-text">Maximum file size: 5MB. Recommended dimensions: 300x300 pixels.</p>
        </div>
        
        <div id="upload-status" class="status-message"></div>
        
        <div class="form-actions">
            <button type="submit" id="upload-button" class="btn-primary">Upload</button>
            <a href="/profile" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script src="/public/js/profile-upload.js"></script>

